<%= form_for @hotel do |f| %>
    <p>
    <%= f.label :label_name, "Name" %>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :label_city, "City" %>
    <%= f.text_field :city %>
    </p>

    <p>
    <%= f.label :label_state, "State" %>
    <%= f.text_field :state %>
    </p>
    <%= f.submit %>
<% end %>

<br/>
<%= link_to 'Back', hotels_path %>
